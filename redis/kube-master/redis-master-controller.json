{
  "id": "redisMasterController",
  "kind": "ReplicationController",
  "apiVersion": "v1beta1",
  "desiredState": {
    "replicas": 1,
    "replicaSelector": {"name": "redis-master"},
    "podTemplate": {
      "desiredState": {
         "manifest": {
           "version": "v1beta1",
           "id": "redisMasterController",
           "containers": [
             {
               "name": "master",
               "image": "redis:2.8.17",
               "ports": [
                  {
                    "containerPort": 6379, 
                    "hostPort": 6379
                  },
                "volumeMounts": [
                  {
                    "name": "redis-master-data",
                    "mountPath": "/data"
                  }
                ]
               ]
             }
           ],
          "volumes": [
            {
              "name": "redis-master-data",
              "source": {
                "hostDir":"~/var/data/redis/master-data"
              }
            }
          ]
        }
      },
       "labels": {"name": "redis-master"}
    }
  },
  "labels": {"name": "redis-master"}
}