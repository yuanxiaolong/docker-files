{
  "id": "redisSlaveController",
  "kind": "ReplicationController",
  "apiVersion": "v1beta1",
  "desiredState": {
    "replicas": 1,
    "replicaSelector": {"name": "redis-slave"},
    "podTemplate": {
      "desiredState": {
         "manifest": {
           "version": "v1beta1",
           "id": "redisSlaveController",
           "containers": [
             {
               "name": "slave",
               "image": "yuanxiaolong/redis-slave",
               "ports": [
                  {
                    "containerPort": 6379, 
                    "hostPort": 6380
                  }
               ],
               "volumeMounts": [
                  {
                    "name": "redis-slave-data",
                    "mountPath": "/data"
                  }
               ]
             }
           ],
          "volumes": [
            {
              "name": "redis-slave-data",
              "source": {
                "hostDir":"~/var/data/redis/slave-data"
              }
            }
          ]
        }
      },
       "labels": {"name": "redis-slave"}
    }
  },
  "labels": {"name": "redis-slave"}
}